<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My ASP.NET Site</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Фиксируем фон */
        body {
            background-image: url('https://asset.gecdesigns.com/img/wallpapers/beautiful-magical-misty-mountains-reflection-river-ultra-hd-wallpaper-4k-sr10012420-1706505766369-cover.webp');
            background-attachment: fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        /* Устанавливаем высоту шапки и футера */
        .navbar, .footer {
            flex-shrink: 0;
            margin: 0;
        }

        /* Контейнер основной части */
        .container-xl {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.9);
            border-left: 2px solid #ddd;
            border-right: 2px solid #ddd;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1), -5px 0 15px rgba(0, 0, 0, 0.1);
        }

        /* Основной блок внутри контейнера */
        .main-content {
            width: 100%;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Навигационная панель -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">dOS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Katalog" asp-controller="Shop">Каталог</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">Головна</a>
                </li>
                <li>
                <a class="nav-link" asp-action="Korzina" asp-controller="Shop">
                <i class="bi bi-cart"></i> Кошик
                </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Register" asp-controller="Account">Зареєструватись</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Основной контейнер -->
    <div class="container-xl main-content">
        @RenderBody() <!-- Основной контент страницы -->
    </div>

    <!-- Футер -->
    <footer class="container-fluid bg-light py-3 footer">
        <div class="container-md text-center">
            <p class="mb-0">&copy; 2023 - MySite. All rights reserved.</p>
        </div>
    </footer>

    <!-- Подключение Bootstrap JS и jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
